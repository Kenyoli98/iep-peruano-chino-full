# Configuración del Proyecto I.E.P Peruano Chino

# Entorno de desarrollo
NODE_ENV=development

# Puerto para el frontend (Next.js)
NEXT_PUBLIC_PORT=3000

# Puerto para el backend (Express)
BACKEND_PORT=5000

# URL base del backend para el frontend
NEXT_PUBLIC_API_URL=http://localhost:5000

# Base de datos (SQLite para desarrollo)
DATABASE_URL="file:./dev.db"

# JWT Secret (cambiar en producción)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Configuración de Email (opcional para desarrollo)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@iep-peruano-chino.edu.pe

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Configuración de sesión
SESSION_TIMEOUT=3600000

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Prisma
PRISMA_CLI_QUERY_ENGINE_TYPE=binary