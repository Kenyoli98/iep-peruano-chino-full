# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/nombre_base_datos"

# ===========================================
# CONFIGURACIÓN DE JWT
# ===========================================
JWT_SECRET="tu_clave_secreta_muy_segura_aqui"

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN DE EMAIL
# ===========================================

# Proveedor de email (gmail, outlook, yahoo, smtp)
EMAIL_PROVIDER=gmail

# Configuración SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Credenciales de autenticación
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion

# Información del remitente
EMAIL_FROM_NAME="I.E.P Peruano Chino"
EMAIL_FROM_ADDRESS=noreply@iepperuanochino.edu.pe
EMAIL_REPLY_TO=soporte@iepperuanochino.edu.pe

# URLs del frontend
FRONTEND_URL=http://localhost:3002
RESET_PASSWORD_URL=http://localhost:3002/reset-password

# Configuración de desarrollo
EMAIL_DEBUG=true
EMAIL_PREVIEW=true

# Configuración de rate limiting (emails por hora)
EMAIL_RATE_LIMIT=50



# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# ===========================================
# CONFIGURACIONES ADICIONALES
# ===========================================

# Para Gmail: Necesitas generar una "Contraseña de aplicación"
# 1. Habilita la verificación en 2 pasos en tu cuenta de Google
# 2. Ve a "Gestionar tu cuenta de Google" > "Seguridad"
# 3. En "Iniciar sesión en Google", selecciona "Contraseñas de aplicaciones"
# 4. Genera una nueva contraseña para "Correo"
# 5. Usa esa contraseña en EMAIL_PASS

# Para Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Para Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Para SMTP personalizado:
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=tu_servidor_smtp.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tu_usuario
# EMAIL_PASS=tu_contraseña